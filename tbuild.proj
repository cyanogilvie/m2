set version	0.37.0

set summary "m2 messagebus node"

set description {
Provides service tag based routing for m2 messages
}


tm "m2" { #<<<
	version $::version

	summary "Realtime messagebus with efficient multipoint subscriptions"

	description {
		A service-routed realtime messagebus with efficient distribution
		of multi-endpoint subscription channels
	}

	requires {
		{Tcl 8.6}
		{netdgram 0.5.5}
		{sop 1.2}
		sha1
		evlog
	}

	init {
		namespace eval m2 {}
	}

	files {
		scripts/api.tcl
		scripts/api2.tcl
		scripts/*.tcl
	}

	platform tcl
}

#>>>
application "m2_node" { #<<<
	version ${::version}.2

	runtime cfkit8.6

	fs trofs

	requires {
		m2
		{netdgram 0.6.1}
		{netdgram::tcp 0.6.1}
		{netdgram::jssocket 0.6.1}
		{netdgram::uds 0.6.1}
		{sop 1.2}
		cflib
		dsl
		logging
	}

	files {
		m2_node/m2_node.tcl
	}

	#choose_package {
	#	return "m2_node"
	#}

	platform linux-glibc2.3-ix86 {
		requires {
			sockopt
			unix_sockets
			hash
		}
	}
	#platform linux-glibc2.4-ppc {
	#	requires {daemon}
	#}

	platform [this_platform] {
		requires {
			sockopt
			unix_sockets
			hash
		}
	}

	platform tcl
}

#>>>
application "m2_node_install" { #<<<
	version $::version

	runtime cfkit8.6

	requires {
		cflib
		dsl
	}

	files {
		m2_node/install.tcl
	}

	platform linux-glibc2.3-ix86
	platform [this_platform]
	platform tcl
}

#>>>
application "authenticatord" { #<<<
	version 0.22.0

	runtime cfkit8.6
	#runtime rozkit8.6

	requires {
		m2
		{sop 1.2}
		{netdgram 0.5.5}
		{netdgram::tcp 0.5.5}
		{netdgram::uds 0.5.5}
		cflib
		sop
		dsl
		crypto
		hash

		sha1
	}

	files {
		authenticator/authenticator
		authenticator/*
	}

	platform linux-glibc2.3-ix86 {
		requires {
			sqlite3
		}
	}

	platform [this_platform] {
		requires {
			sqlite3
		}
	}
}

#>>>
application "m2_keys" { #<<<
	version $::version

	runtime cfkit8.6

	requires {
		crypto
		cflib
		dsl
		sop
	}

	files {
		tools/keys.tcl
	}

	platform tcl
}

#>>>
rpm "m2_node" { #<<<
	version ${::version}.0

	summary $::summary

	description $::description

	applications {
		m2_node
		m2_node_install		/usr/lib/m2_node/install
	}

	post_scriptlet {
		/usr/lib/m2_node/install install
	}

	preun_scriptlet {
		/usr/lib/m2_node/install remove
	}

	target i586-linux-gnu linux-glibc2.3-ix86
}

#>>>
deb "m2node" { #<<<
	version ${::version}

	summary $::summary

	description $::description

	applications {
		m2_node
	}

	files {
		upstart/m2_node.conf /etc/init/
	}

	target i386 linux-glibc2.3-ix86
	target amd64 linux-glibc2.10-x86_64
}

