#!/usr/bin/env tclsh8.6

# vim: ft=tcl foldmethod=marker foldmarker=<<<,>>> ts=4 shiftwidth=4


#set auto_path	{}
tcl::tm::path add [file normalize [file join [file dirname [info script]] .. tm]]
set auto_path	{}

package require Tcl 8.6
package require m2

set cfg	[dict create {*}{
	listen_on		{"tcp_coroutine://:5307"}
	upstream		{}
}]

proc log {lvl msg} {
	puts $msg
}

interp bgerror {} [list apply {
	{errmsg options} {
		log error "$errmsg"
		array set o	$options
		parray o
	}
}]

m2::node create server \
		-listen_on	[dict get $cfg listen_on] \
		-upstream	[dict get $cfg upstream]

vwait ::forever

